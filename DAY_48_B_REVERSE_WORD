Q96: Reverse each word in a sentence without changing the word order.

/*
Sample Test Cases:
Input 1:
I love coding
Output 1:
I evol gnidoc

*/

#include <stdio.h>
#include <string.h>

void reverseWord(char *word) {
    int i = 0, j = strlen(word) - 1;
    while (i < j) {
        char tmp = word[i];
        word[i] = word[j];
        word[j] = tmp;
        i++;
        j--;
    }
}

int main() {
    char s[1000];
    if (fgets(s, sizeof(s), stdin) == NULL) return 0;
    size_t len = strlen(s);
    if (len > 0 && s[len-1] == '\n') {
        s[len-1] = '\0';
    }

    char *word = strtok(s, " ");
    int first = 1;
    while (word != NULL) {
        reverseWord(word);
        if (!first) {
            printf(" ");
        }
        printf("%s", word);
        first = 0;
        word = strtok(NULL, " ");
    }
    printf("\n");
    return 0;
}
