Q99: Change the date format from dd/04/yyyy to dd-Apr-yyyy.

/*
Sample Test Cases:
Input 1:
15/04/2025
Output 1:
15-Apr-2025

*/

#include <stdio.h>
#include <string.h>

int main() {
    char s[20];
    if (fgets(s, sizeof(s), stdin) == NULL) return 0;

    // Remove newline if present
    size_t len = strlen(s);
    if (len > 0 && s[len - 1] == '\n') {
        s[len - 1] = '\0';
    }

    char day[3], month[3], year[5];
    // Assuming format exactly dd/mm/yyyy
    strncpy(day,  s,   2); day[2] = '\0';
    strncpy(month,s+3, 2); month[2] = '\0';
    strncpy(year, s+6, 4); year[4] = '\0';

    const char *monthNames[] = {
        "Jan","Feb","Mar","Apr","May","Jun",
        "Jul","Aug","Sep","Oct","Nov","Dec"
    };

    int m = atoi(month);  // converts "04" â†’ 4
    const char *monAbbrev = "Invalid";
    if (m >= 1 && m <= 12) {
        monAbbrev = monthNames[m - 1];
    }

    printf("%s-%s-%s\n", day, monAbbrev, year);
    return 0;
}
